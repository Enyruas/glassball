IDIR = src/cplusplus/
OBJ = Server.o Client.o glassball.o
LIB = -lpthread

glassball_cxx: $(OBJ)
	$(CXX) -o $@ $^ $(CLAGS) $(LIB)
glassball.o: $(IDIR)glassball.cc $(IDIR)glassball.h
	$(CXX) -c -o $@ $< 
Client.o: $(IDIR)Client.cc $(IDIR)Client.h $(IDIR)Stream.h
	$(CXX) -c -o $@ $<
Server.o: $(IDIR)Server.cc $(IDIR)Server.h $(IDIR)Stream.h
	$(CXX) -c -o $@ $<

.PHONY: clean
clean:
	rm -rf *.o
